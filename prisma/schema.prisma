generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Denomination {
  id            String         @id @default(uuid())
  slug          String         @unique
  name          String
  abbr          String
  congregations Congregation[]
}

model Congregation {
  id               String       @id @default(uuid())
  pastor           String?
  name             String?
  website          String?
  phone            String?
  email            String?
  address          String?
  contact          String?
  long             String?
  lat              String?
  denomination     Denomination? @relation(fields: [denominationSlug], references: [slug])
  denominationSlug String?
}
