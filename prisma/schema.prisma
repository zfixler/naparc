generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Denomination {
  id            String         @id @default(uuid())
  slug          String         @unique
  name          String
  abbr          String
  description   String?
  presbyteries  Presbytery[]
  congregations Congregation[]
}

model Presbytery {
  id               String         @id @default(uuid())
  name             String
  slug             String
  denominationSlug String
  congregations    Congregation[]
  denomination     Denomination   @relation(fields: [denominationSlug], references: [slug])

  @@unique(name: "slugs", [denominationSlug, slug])
}

model Congregation {
  id               String       @id @default(uuid())
  pastor           String?
  name             String?
  website          String?
  phone            String?
  email            String?
  address          String?
  addressLabel     String?
  contact          String?
  lon              Float?
  lat              Float?
  presbyteryId     String?
  presbytery       Presbytery?  @relation(fields: [presbyteryId], references: [id])
  denominationSlug String
  denomination     Denomination @relation(fields: [denominationSlug], references: [slug])
  createdAt        DateTime?    @default(now())
  updatedAt        DateTime?    @updatedAt
  distance         Float?       
}
